<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".main.banckSlip.BankSlipActivityRegister">

    <data>
        <import type="android.view.View" />

        <variable
            name="presenter"
            type="com.vitorprado.paguei.main.banckSlip.BankSlipPresenter" />
    </data>

    <LinearLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#FFF">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFF">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/civ_logo"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/ic_launcher_background"
                app:civ_border_width="2dp"
                app:civ_border_color="#c6c1c1"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/civ_logo">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nome"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="@={presenter.name}" />

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:id="@+id/l_icons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/civ_logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/iv_cam"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_below="@+id/civ_logo"
                    app:srcCompat="@drawable/ic_photo_camera_blue_32dp" />

                <ImageView
                    android:id="@+id/iv_tint"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_below="@+id/civ_logo"
                    android:layout_marginLeft="65dp"
                    android:layout_toRightOf="@+id/iv_cam"
                    app:srcCompat="@drawable/ic_palette_blue_24dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:background="#e0e0e0"
                android:layout_below="@+id/l_icons"/>
        </RelativeLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Valor"
                android:inputType="numberDecimal"
                android:lines="1"
                android:singleLine="true"
                android:text="@={presenter.value}" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Data de vencimento"
                android:inputType="date"
                android:lines="1"
                android:singleLine="true"
                android:text="@={presenter.date}" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/barcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CÃ³digo de barras"
                android:inputType="text"
                android:lines="1"
                android:singleLine="true"
                android:text="@={presenter.barcode}" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/bt_save"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_button_accent_padding"
            android:drawableLeft="@drawable/ic_barcode_scan_white"
            android:drawablePadding="-45dp"
            android:onClick="@{(v) -> presenter.scanClick()}"
            android:text="Scan"
            android:textColor="#fff"
            android:textSize="17dp"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>
</layout>